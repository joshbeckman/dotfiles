{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "cleanupPeriodDays": 60,
  "env": {
    "MAX_MCP_OUTPUT_TOKENS": "35000",
    "EDITOR": "nvim",
    "GIT_EDITOR": "nvim"
  },
  "includeCoAuthoredBy": true,
  "permissions": {
    "allow": [
      "Bash(/usr/bin/osascript:*)",
      "Bash(terminal-notifier:*)",
      "Bash(grep:*)",
      "Bash(mcp:*)",
      "Bash(pwd:*)",
      "mcp__josh-notes__search_posts",
      "WebFetch(domain:www.joshbeckman.org)",
      "mcp__josh-beckman-status__get_status",
      "mcp__josh-beckman-status__get_current_time_of_day",
      "Bash(preview-md:*)",
      "mcp__josh-notes__get_post"
    ],
    "additionalDirectories": [
      "~/Downloads",
      "/tmp"
    ]
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.message' | xargs -I {} terminal-notifier -message \"{}\" -title \"Claude Hook\" -group \"$(pwd):hook\" -execute \"/opt/homebrew/bin/wezterm cli activate-pane --pane-id $WEZTERM_PANE\" -activate com.github.wez.wezterm"
          }
        ]
      }
    ]
  },
  "alwaysThinkingEnabled": false,
  "feedbackSurveyState": {
    "lastShownTime": 1754147115362
  }
}
